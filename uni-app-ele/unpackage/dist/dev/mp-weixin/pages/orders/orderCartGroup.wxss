.checkout-section ._h3 {
  padding: 32rpx 0;
  color: #333;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 48rpx;
  line-height: 1;
  font-weight: 700;
}
.checkout-section ._ul {
  margin-top: 5rpx;
  color: #333;
  font-size: 28rpx;
}
