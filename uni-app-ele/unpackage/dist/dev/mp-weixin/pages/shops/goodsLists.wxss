        height: 26rpx;
        margin-right: 6rpx;
}
.list_box .left .item:not(:first-child) {
        margin-top: 1px;
}
.list_box .left .item:not(:first-child):after {
          content: '';
          display: block;
          height: 0;
          border-top: #d6d6d6 solid 1px;
          width: 120rpx;
          position: absolute;
          bottom: -1px;
          left: 50%;
