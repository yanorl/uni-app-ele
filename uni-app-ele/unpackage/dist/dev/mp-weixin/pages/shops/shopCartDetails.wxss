.shop-cart-details-box {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}
.shop-cart-details-box.listShow {
  -webkit-transform: translate3d(0, -100%, 0);
          transform: translate3d(0, -100%, 0);
}
.shop-cart-details-box .list-header {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 36rpx;
  background: #f3f5f7;
  border-bottom: 1px solid rgba(7, 17, 27, 0.1);
}
.shop-cart-details-box .list-header .title {
  float: left;
  font-size: 28rpx;
  color: #07111b;
}
.shop-cart-details-box .list-header .empty {
  float: right;
  font-size: 24rpx;
  color: #00a0dc;
}
.shop-cart-details-box .list-content {
  padding: 0 36rpx;
  max-height: 434rpx;
  overflow: hidden;
  background: #fff;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.shop-cart-details-box .list-content .food {
  padding: 24rpx 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border-bottom: 1px solid rgba(7, 17, 27, 0.1);
  position: relative;
}
.shop-cart-details-box .list-content .food .name {
  line-height: 48rpx;
  font-size: 28rpx;
  color: #07111b;
  width: 320rpx;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shop-cart-details-box .list-content .food .price {
  position: absolute;
  left: 400rpx;
  top: 24rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #f01414;
}
.shop-cart-details-box .list-content .food .cart-control-wrapper {
  position: absolute;
  right: 0;
  top: 16rpx;
}
.list-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  -webkit-backdrop-filter: blur(20rpx);
          backdrop-filter: blur(20rpx);
  background: rgba(7, 17, 27, 0.6);
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
  display: none;
  opacity: 0;
}
.list-mask.listShow {
  display: inline-block;
  opacity: 1;
  background: rgba(7, 17, 27, 0);
}

