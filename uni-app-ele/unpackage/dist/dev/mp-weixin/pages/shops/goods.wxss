  padding-top: 32rpx;
  background-color: #fff;
  height: 506rpx;
}
.goods-box .recommend .recommend-name {
    padding-left: 32rpx;
    color: #333;
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 20rpx;
}
.goods-box .recommend .recommend-wrap {
    overflow-x: scroll;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    padding-bottom: 20rpx;
}
.goods-box .recommend .recommend-wrap ._ul {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      padding-left: 32rpx;
