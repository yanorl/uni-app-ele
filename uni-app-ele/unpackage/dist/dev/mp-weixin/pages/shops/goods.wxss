                flex: none;
        width: 240rpx;
        margin-right: 20rpx;
}
.goods-box .recommend .recommend-wrap ._ul ._li image {
          display: block;
          width: 240rpx;
          height: 240rpx;
          border-top-left-radius: 8rpx;
          border-top-right-radius: 8rpx;
          max-width: 100%;
}
