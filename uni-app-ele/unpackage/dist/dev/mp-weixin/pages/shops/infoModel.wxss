.info-model {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}
.info-model .brief-modal {
    position: relative;
    width: 80%;
    max-height: 640rpx;
    padding: 40rpx;
    border-radius: 10rpx;
    overflow: hidden;
    background: #fff;
    z-index: 100;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    box-sizing: border-box;
}
.info-model .brief-modal ._h2 {
      font-size: 36rpx;
      color: #333;
      text-align: center;
      font-weight: bolder;
}
.info-model .brief-modal ._h2 ._i {
        display: inline-block;
        margin-right: 12rpx;
        border-radius: 4rpx;
        background-image: -webkit-linear-gradient(left, #fff100, #ffe339);
        background-image: linear-gradient(90deg, #fff100, #ffe339);
        color: #6a3709;
        font-style: normal;
        padding: 6rpx;
        font-weight: 700;
        font-size: 30rpx;
}
.info-model .brief-modal ._ul {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      margin: 40rpx -40rpx 0;
}
.info-model .brief-modal ._ul ._li {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        text-align: center;
}
.info-model .brief-modal ._ul ._li ._h3 {
          font-size: 28rpx;
          font-weight: 600;
          color: #333;
          margin-bottom: 10rpx;
}
.info-model .brief-modal ._ul ._li text {
          font-size: 24rpx;
          color: #999;
}
.info-model .brief-modal .promotion {
      position: relative;
      text-align: center;
      margin: 20rpx 170rpx;
      width: 150rpx;
      background-image: -webkit-linear-gradient(left, #fff, #333 50%, #fff);
      background-image: linear-gradient(90deg, #fff, #333 50%, #fff);
      background-size: 100% 1px;
      background-position: 50%;
      background-repeat: no-repeat;
}
.info-model .brief-modal .promotion text {
        font-size: 32rpx;
        padding: 0 8rpx;
        color: #999;
        background-color: #fff;
}
.info-model .brief-modal .brief-modal-yx {
      font-size: 28rpx;
      line-height: 1.54;
      color: #333;
      max-height: 200rpx;
      overflow-y: auto;
}
.info-model .brief-modal-close {
    margin-top: 60rpx;
    width: 60rpx;
    height: 60rpx;
}
.info-model .brief-modal-close image {
      width: 100%;
      height: 100%;
}
