.pay-box .pay-wrap {
  width: 100%;
  height: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.pay-box .pay-wrap .tip {
  display: block;
  text-align: center;
  background-color: #fff;
  color: #333;
  padding: 60rpx;
  line-height: 60rpx;
}
.pay-box .pay-wrap .tip .countdown-title {
  font-size: 28rpx;
  color: #999;
}
.pay-box .pay-wrap .tip .countdown-text {
  height: 60rpx;
  color: #333;
  font-size: 56rpx;
}
.pay-box .pay-wrap .pay-content .list {
  border-bottom: 1px solid #eee;
  background: #fff;
}
.pay-box .pay-wrap .pay-content .info-list {
  padding: 0 50rpx;
}
.pay-box .pay-wrap .pay-content .info-list ._li {
  border-top: 1px solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 50rpx 0;
  font-size: 32rpx;
  line-height: 32rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.pay-box .pay-wrap .pay-content .info-list ._li .order-name {
  color: #333;
  display: inline-block;
  vertical-align: bottom;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 30rpx;
  max-width: 60%;
}
.pay-box .pay-wrap .pay-content .info-list ._li .text-highlight {
  color: #ff6000;
}
.pay-box .pay-wrap .pay-content .title {
  background-color: #f5f5f5;
  font-size: 28rpx;
  padding: 10rpx;
  color: #999;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay-box .pay-wrap .pay-content .payment-list-item {
  border-bottom: 0.5px solid #eee;
  padding: 30rpx;
  font-size: 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.pay-box .pay-wrap .pay-content .payment-list-item .icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay-box .pay-wrap .pay-content .payment-list-item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}
.pay-box .pay-wrap .pay-content .payment-list-item ._i {
  font-size: 48rpx;
  color: #eee;
}
.pay-box .pay-wrap .pay-content .payment-list-item .selected {
  color: #4cd964 !important;
}
.pay-box .pay-wrap .button-wrap {
  margin: 20rpx auto;
  width: 90%;
  /* 不可点击btn */
}
.pay-box .pay-wrap .button-wrap .btn-submit {
  font-size: 36rpx;
  line-height: 48rpx;
  background-color: #4cd964;
  width: 100%;
  outline: none;
  border: none;
  color: #fff;
  border-radius: 10rpx;
  padding: 16rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.pay-box .pay-wrap .button-wrap .btn-submit[disabled] {
  background-color: #bbb !important;
}

