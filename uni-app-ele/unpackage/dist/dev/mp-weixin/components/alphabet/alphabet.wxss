.area-box .title {
  padding: 10rpx 4%;
  width: 92%;
  color: #aaa;
}
.area-box .area-wrap {
  height: calc(100vh - 240rpx);
}
.area-box .area-wrap .city-wrap .hot-wrap {
    border-bottom: 1px solid #e8e8e8;
}
.area-box .area-wrap .city-wrap .hot-wrap ._ul {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      background-color: #ffffff;
}
.area-box .area-wrap .city-wrap .hot-wrap ._ul ._li {
        text-align: center;
        width: calc(100vw / 3);
}
.area-box .area-wrap .city-wrap .hot-wrap ._ul ._li text {
          background: #eeeeee;
          display: block;
          margin: 20rpx;
          padding: 20rpx;
          border-radius: 10rpx;
}
.area-box .area-wrap .city-wrap ._ul ._li text {
    padding: 20rpx 40rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
    display: block;
}
.area-box .area-keys {
  position: fixed;
  right: 0;
  top: 25%;
  color: #ffffff;
  font-size: 12px;
  line-height: 1.5;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  padding: 20rpx 10rpx;
  z-index: 1;
}
.area-box .area-keys ._ul ._li.current {
    color: #ffcd32;
}
.area-box .list-fixed {
  position: absolute;
  width: 100%;
  height: 60rpx;
  top: 240rpx;
}
.area-box .list-fixed .title {
    background-color: #f1f1f1;
}

